{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/types","./node_modules/@types"]
  },
  "include": ["api/*.ts", "src/**/*.ts",  "src/types" ],
  "exclude": ["node_modules"]
}